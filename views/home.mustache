    {{>scripts}}

    <script>
    	(function(){
    		$('#btn-order').click(function(event){
    			if(event)
    				event.preventDefault()
    			var order = {
    				name : $('#order-name').val(),
    				email : $('#order-email').val(),
    				order : $('#order-description').val()
    			}
    			
    			$.ajax({
    				url : '/order',
    				method : 'post',
    				data : order,
    				success : function(res) {
    					$('#btn-order-container').html("<h3>Thanks! We'll send you and email when your order is ready!!</h3>")
    				},
    				error : function(err) {

    				}
    			})
    		})
    	})()
    </script>
    
